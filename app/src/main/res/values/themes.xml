<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GitHubUserApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_grey</item>
        <item name="colorPrimaryVariant">@color/extra_dark_grey</item>
        <item name="colorOnPrimary">@color/light_grey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/extra_dark_grey</item>
    </style>

    <style name="Theme.GitHubUserApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/extra_dark_grey</item>
    </style>

    <style name="Theme.GitHubUserApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GitHubUserApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- My custom theme -->
    <style name="SplashScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_image</item>
        <item name="android:statusBarColor">@color/dark_grey</item>
    </style>

    <style name="UserDetail" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/extra_dark_grey</item>
    </style>

    <style name="AvatarProfileBG">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:alpha">0.5</item>
    </style>

    <style name="AvatarProfile">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">160dp</item>
        <item name="android:layout_gravity">bottom|center</item>
    </style>

    <style name="TextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
    </style>

    <style name="TextContent.Name">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/light_blue</item>
    </style>

    <style name="TextContent.Username">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/light_grey</item>
    </style>

    <style name="ProfileCountText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ProfileCountText.Value">
        <item name="android:textColor">@color/extra_light_grey</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProfileCountText.Label">
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="InfoIcon">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:tint">@color/light_grey</item>
    </style>

    <style name="InfoTextContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="ButtonGreen">
        <item name="android:textColor">@color/extra_light_grey</item>
        <item name="android:backgroundTint">@color/green</item>
    </style>

    <style name="ButtonBlue">
        <item name="android:textColor">@color/extra_light_grey</item>
        <item name="android:backgroundTint">@color/light_blue</item>
    </style>

</resources>