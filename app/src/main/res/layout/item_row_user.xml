<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="4dp"
    android:backgroundTint="@color/dark_grey"
    android:outlineProvider="background"
    card_view:cardCornerRadius="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/user4" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/TextContent.Name"
            android:layout_marginStart="16dp"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            card_view:layout_constraintStart_toEndOf="@+id/iv_avatar"
            card_view:layout_constraintTop_toTopOf="@+id/iv_avatar"
            tools:text="@string/name" />

        <TextView
            android:id="@+id/tv_username"
            style="@style/TextContent.Username"
            android:textSize="16sp"
            card_view:layout_constraintStart_toEndOf="@+id/tv_name"
            card_view:layout_constraintTop_toTopOf="@+id/tv_name"
            tools:text="@string/username" />

        <!-- Detail Information Section Start -->
        <ImageView
            android:id="@+id/iv_company"
            style="@style/InfoIcon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:contentDescription="@string/company"
            android:src="@drawable/ic_company"
            card_view:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
            card_view:layout_constraintStart_toStartOf="@+id/tv_name" />

        <TextView
            android:layout_width="80dp"
            android:id="@+id/tv_company"
            style="@style/InfoTextContent"
            android:maxLines="1"
            android:text="@string/company"
            android:textSize="11sp"
            android:layout_marginStart="4dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/iv_company"
            card_view:layout_constraintStart_toEndOf="@+id/iv_company"
            card_view:layout_constraintTop_toTopOf="@+id/iv_company" />

        <ImageView
            android:id="@+id/iv_location"
            style="@style/InfoIcon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/location"
            android:src="@drawable/ic_location"
            card_view:layout_constraintBottom_toBottomOf="@+id/tv_company"
            card_view:layout_constraintStart_toEndOf="@+id/tv_company"
            card_view:layout_constraintTop_toTopOf="@+id/tv_company" />

        <TextView
            android:layout_width="80dp"
            android:id="@+id/tv_location"
            style="@style/InfoTextContent"
            android:layout_toEndOf="@+id/iv_location"
            android:maxLines="1"
            android:text="@string/location"
            android:textSize="11sp"
            android:layout_marginStart="4dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/iv_location"
            card_view:layout_constraintStart_toEndOf="@+id/iv_location"
            card_view:layout_constraintTop_toTopOf="@+id/iv_location" />
        <!-- Detail Information Section End -->

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>